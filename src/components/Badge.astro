---
interface Props {
    href?: string;
}

const { href } = Astro.props;

const badgeClasses = "inline-block rounded-md bg-primary px-2 py-1 text-xs text-white";
---

{
    href ? (
        <a
            href={href}
            class:list={[
                badgeClasses,
                "no-underline transition-colors duration-200 ease-in-out",
                "hover:bg-primary/50 hover:text-white hover:outline"
            ]}
        >
            <slot />
        </a>
    ) : (
        <span class={badgeClasses}>
            <slot />
        </span>
    )
}
